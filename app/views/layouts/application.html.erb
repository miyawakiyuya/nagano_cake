<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body class="d-flex flex-column vh-100 ">
  <header>
  <nav class="navbar navbar-expand-lg navbar-dark p-4 border-bottom border-secondary">
    <div class="container">
      <a class=" btn btn-outline-dark" href="/"><h2>LOGO</h2></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
         <% if customer_signed_in? %>
          <li><%= link_to "マイページ", customers_my_page_path, class:"btn btn-outline-dark" %></li>
          <li><%= link_to "商品一覧", items_path, class:"btn btn-outline-dark" %></li>
          <li><%= link_to "カート", cart_items_path, class:"btn btn-outline-dark" %></li>
          <li><%= link_to "ログアウト", destroy_customer_session_path, class:"btn btn-outline-dark" %></li>
          <% elsif admin_signed_in? %>
          <li><%= link_to "商品一覧", admin_items_path, class:"btn btn-outline-dark" %></li>
          <li><%= link_to "会員一覧",  admin_customers_path, class:"btn btn-outline-dark" %></li>
          <li><%= link_to "注文履歴一覧",  admin_homes_top_path, class:"btn btn-outline-dark" %></li>
          <li><%= link_to "ログアウト", destroy_admin_session_path, class:"btn btn-outline-dark" %></li>
          <% else %>
          <li><%= link_to "About", homes_about_path, class:"btn btn-outline-dark" %></li>
          <li><%= link_to "商品一覧", homes_about_path, class:"btn btn-outline-dark" %></li>
          <li><%= link_to "新規登録", new_customer_registration_path, class:"btn btn-outline-dark" %></li>
          <li><%= link_to "ログイン", new_customer_session_path, class:"btn btn-outline-dark" %></li>
          <% end %>

        </ul>
      </div>
    </div>
  </nav>
  </header>
   <main>
     <div class="container mx-auto">
       <%= yield %>
     </div>
   </main>

  <footer class="fixed-bottom">

  </footer>
 </body>
</html>

