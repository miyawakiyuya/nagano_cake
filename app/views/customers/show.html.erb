<div class="container">
<div class="row">
<div class="col-xs-offset-1 col-xs-8">
		<h4 class="head-line text-center title_h2 mt-3"><span>マイページ</span></h4>
    <strong class="information-link">登録情報</strong>
		   <%= link_to " 編集する", edit_customers_path, class: "btn btn-success my-3" %>
        <table border="1" width="700" height="auto" >
		     <tbody>
					<tr>
						<td width="30%">氏名</td>
            <td width="70%"><%= @customer.first_name %> <%= @customer.last_name %></td>
					</tr>
					<tr>
						<td class="info">カナ</td>
						<td class="text-left"><%= @customer.kana_first_name %> <%= @customer.kana_last_name %></td>
					</tr>
					<tr>
						<td class="info">郵便番号</td>
						<td class="text-left"><%= @customer.postal_code %></td>
          </tr>
					<tr>
						<td class="info">住所</td>
            <td class="text-left"><%= @customer.residence %></td>
					</tr>
					<tr>
						<td class="info">電話番号</td>
						<td class="text-left"><%= @customer.phone_number %></td>
					</tr>
					<tr>
						<td class="info">メールアドレス</td>
						<td class="text-left"><%= @customer.email %></td>
           </tr>
				 </tbody>
		    </table>
       <table class="my-4">
			   <tr class="my-7">
			    <td><strong>配送先</strong></td>
			    <td><%= link_to " 一覧を見る",  addresses_path, class: "btn btn-primary" %></td>
			  <tr>
			  <tr>
			    <td><strong>注文履歴</strong></td>
			    <td><%= link_to " 一覧を見る",  orders_path, class: "btn btn-primary" %></td>
			    <tr>
		   </table>
</div>
</div>
</div>