<div class="container">
<h3 class="my-4 offset-1"><span>新規会員登録</span></h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<table class="table table-borderless">
	<tr>
	  <td>名前</td>
      <td class="text-left">
         （姓）<%= f.text_field :first_name, autofocus: true %>
         （名）<%= f.text_field :last_name, autofocus: true %>
      </td>
	</tr>
	<tr>
	  <td>フリガナ</td>
	  <td class="text-left">
         （セイ）<%= f.text_field :kana_first_name, autofocus: true %>
         （メイ）<%= f.text_field :kana_last_name, autofocus: true %>
      </td>
    </tr>
	<tr>
      <td><%= f.label :email,"メールアドレス" %></td>
	  <td class="text-left"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
	</tr>
	<tr>
	  <td><%= f.label :postal_code,"郵便番号" %></td>
      <td class="text-left"><%= f.text_field :postal_code %></td>
	</tr>
	<tr>
	  <td><%= f.label :residence,"住所" %></td>
      <td class="text-left"><%= f.text_field :residence, size: 70 %></td>
	</tr>
	<tr>
	  <td><%= f.label :phone_number,"電話番号" %></td>
	  <td class="text-left"><%= f.telephone_field :phone_number %></td>
  </tr>
  <tr>
	  <td>
	     <%= f.label :password,"パスワード" %>
         <% if @minimum_password_length %>
         <em>(<%= @minimum_password_length %> 文字以上)</em>
         <% end %>
      </td>
	  <td class="text-left"><%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr>
  <tr>
	  <td><%= f.label :password_confirmation,"パスワード（確認用）" %></td>
	  <td class="text-left"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
  <tr>
	  <td></td>
	  <td class="text-left"><%= f.submit "新規登録",class: "btn btn-success" %></td>
  </tr>
</table>
<% end %>

<h4 class="my-3 offset-1"><span>すでに登録済みの方</span></h4>
<p class="offset-2"><%= link_to "こちら", new_customer_session_path %>   からログインしてください。</p>
</div>
