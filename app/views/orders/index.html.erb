<h3 class="mt-3"><span>注文履歴一覧</span></h3>
  <table border="1" width="1100" height="auto" >
    <tr>
	   <th width="12%">注文日</th>
		 <th width="45%">配送先</th>
		 <th width="12%">注文商品</th>
		 <th width="8%">支払金額</th>
		 <th width="11%">ステータス</th>
		 <th width="12%">注文詳細</th>
		</tr>
	   <% @orders.each do |order| %>
		<tr>
		 <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
		 <td>〒<%= order.personal_information %></td>
		 <td><% order.order_details.each do |order_detail| %>
		     <%= order_detail.item.name%>
		 <% end%>
         </td>
		 <td><%= order.total_payment %>円</td>
		 <td><%= order.status_i18n %></td>
		 <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
	    </tr>
	    <% end %>
	</table>