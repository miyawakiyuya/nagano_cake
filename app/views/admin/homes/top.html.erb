<div class="row">
<div class="offset-3">
  <h3 class="mt-3"><span>注文履歴一覧</span></h3>
  <table class="table table-bord" >
    <tr>
	   <th>購入日時</th>
		 <th>購入者</th>
		 <th>注文個数</th>
		 <th>注文ステータス</th>
		<tr>


	 <% @orders.each do |order| %>
   <% sum = 0 %>
	  <tr>
      <td><%= link_to admin_order_path(order) do %>
        <%= order.created_at %>
        <% end %>
      </td>
	   	<td><%= order.customer.first_name %><%= order.customer.last_name %></td>
		  <td>
		    <% order.order_details.each do |order_detail| %>
            <%  sum += order_detail.amount %>
		    <% end %>
		    <%= sum %>
		  </td>
		  <td><%= order.status_i18n %></td>
     </tr>
     <% end %>
  </table>
</div>
</div>
