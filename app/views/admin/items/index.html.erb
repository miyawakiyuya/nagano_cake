<div class="col-xs-offset-1 col-xs-8">
  <h3 class="head-line text-center title_h2 mt-3"><span>商品一覧</span></h3>
  <%= link_to '商品新規登録', new_admin_item_path,class:"btn btn-success" %>
  <table class="table table-bord" >
	<tbody>
    <tr>
	   <th class="info col-xs-2">商品ID</th>
	   <th class="info col-xs-2">商品名</th>
	   <th class="info col-xs-2">税抜価格</th>
	   <th class="info col-xs-2">ステータス</th>
    <tr>
	 <% @items.each do |item| %>
	<tr>
     <td><%= item.id %></td>
	   <td>
	   		<%= link_to admin_item_path(item) do %>
	   		<%= item.name %>
	   		<% end %>
	   </td>
	   <td><%= item.price %></td>
	   <td>
			<% if item.is_active %>
			<p class="text-success">有効</p>
			<% else %>
			<p class="text-danger">退会</p>
			<% end %>
		 </td>
  </tr>
    <% end %>
	</tbody>
  </table>
</div>
