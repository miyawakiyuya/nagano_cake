<div class="col">
	<h4 class="head-line  title_h2 my-5"><span>商品詳細</span></h4>
	<div class="row">
   <%= attachment_image_tag @item,:image , class:'icon col-4'%>
  <div class="col-8 col-offset-3">
  <table class="table table-borderless">
  	  <tr>
				<th>商品名</th>
        <td><%= @item.name %></td>
			</tr>
			<tr>
				<th>商品説明</th>
        <td><%= @item.introduction %></td>
			</tr>
			<tr>
				<th>税込価格</th>
        <td><%= @item.price %>(<%= (@item.price*1.10).round %>)円</td>
			</tr>
			<tr>
				<th>販売ステータス</th>
      	<% if @item.is_active %>
			  <td class="text-success">販売中</td>
			  <% else %>
			  <td class="text-danger">停止中</td>
			  <% end %>
			</tr>
  </table>
  </div>
  </div>
    <div class="mx-auto w-25"><%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %></div>
  </div>