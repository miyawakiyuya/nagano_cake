<div class="row">
<div class="offset-3">
  <h3 class="mt-3"><span>会員一覧</span></h3>
  <table class="table table-bord" >
	<tbody>
    <tr>
	   <th>会員ID</th>
		 <th>氏名</th>
		 <th>メールアドレス</th>
		 <th>ステータス</th>
		<tr>
	 <% @customers.each do |customer| %>
	  <tr>
      <td><%= customer.id %></td>
	   	<td>
	   		<%= link_to admin_customer_path(customer) do %>
	   		<%= customer.first_name %><%= customer.last_name %>
	   		<% end %>
	    </td>
		  <td><%= customer.email %></td>
		  <td>
			<% if customer.is_valid %>
			<p class="text-success">有効</p>
			<% else %>
			<p class="text-danger">退会</p>
			<% end %>
		  </td>
     </tr>
     <% end %>
	</tbody>
  </table>
</div>
</div>








