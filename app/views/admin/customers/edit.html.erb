<div class="container">
<div class="row">
	<div class="col-xs-offset-1 col-xs-8">
		<h4 class=" my-4"><spna><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</span></h4>
		<%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
		<table width="700" height="400">
	  <tbody>
	    <tr>
      <td class="info col-xs-2">会員ID</td>
      <td><%= @customer.id %></td>
     </tr>
     <tr>
      <td class="info col-xs-2">氏名</td>
      <td><%= f.text_field :first_name %>　　<%= f.text_field :last_name %></td>
     </tr>
     <tr>
      <td class="info col-xs-2">フリガナ</td>
      <td><%= f.text_field :kana_first_name %>　　<%= f.text_field :kana_last_name %></td>
     </tr>
     <tr>
      <td class="info col-xs-2">郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
     </tr>
     <tr>
      <td class="info col-xs-2">住所</td>
      <td><%= f.text_field :residence, size: 50 %></td>
     </tr><tr>
      <td class="info col-xs-2">電話番号</td>
      <td><%= f.text_field :phone_number %></td>
     </tr>
     <tr>
      <td class="info col-xs-2">メールアドレス</td>
      <td><%= f.email_field :email %></td>
     </tr>
     <tr>
      <td class="info col-xs-2">会員ステータス</td>
      <td>
           <%= f.radio_button :is_valid, :true %>有効
           <%= f.radio_button :is_valid, :false %>退会
      </td>
     </tr>
     <tr>
      <td class="info col-xs-2"></td>
      <td> <%= f.submit '変更を保存',class:"btn btn-success" %></td>
      <td> </td>
     </tr>
    </tbody>
    </table>
     <% end %>

  </div>
</div>
</div>